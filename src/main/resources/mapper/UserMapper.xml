<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0/EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.minzzzun.bookdart_be.mapper.UserMapper">

    <!---->
    <select id="detail" parameterType="hashMap" resultType="com.minzzzun.bookdart_be.dto.UserDto$DetailResDto">
        SELECT user.id
             , user.deleted
             , user.created_at as createdAt
             , user.modified_at as modifiedAt
             , user.username
        FROM user
        WHERE user.id = #{id}
    </select>

    <!-- 공통 WHERE 절 -->
    <sql id="commonWhere">
        WHERE user.id is not NULL
        <if test = "deleted != null">AND user.deleted = #{deleted}</if>
        <if test="sdate != null and sdate != ''">AND user.created_at >= CONCAT(#{sdate}, ' 00:00:00')</if>
        <if test="fdate != null and fdate != ''">AND CONCAT(#{fdate}, ' 23:59:59') >= user.created_at</if>
    </sql>

    <select id="list" parameterType="hashMap" resultType="com.minzzzun.bookdart_be.dto.UserDto$DetailResDto">
        SELECT user.id
        FROM user
        <include refid="commonWhere"/>
    </select>

    <select id="pagedListCount" parameterType="hashMap" resultType="Integer">
        SELECT count(user.id) as listsize
        FROM user
        <include refid="commonWhere"/>
    </select>
    <select id="pagedList" parameterType="hashMap" resultType="com.minzzzun.bookdart_be.dto.UserDto$DetailResDto">
        SELECT user.id
        FROM user
        <include refid="commonWhere"/>

        <if test = "orderby != null and orderby =='id'">ORDER BY user.id </if>
        <if test = "orderway != null and orderway =='DESC'"> DESC</if>
        <if test = "orderway != null and orderway =='ASC'"> ASC</if>
        LIMIT #{offset}, #{perpage}
    </select>
    <select id="scrollList" parameterType="hashMap" resultType="com.minzzzun.bookdart_be.dto.UserDto$DetailResDto">
        SELECT user.id
        FROM user
        <include refid="commonWhere"/>

        <if test = "orderby != null and orderby =='id'">
            <if test = "orderway != null and orderway =='DESC'">
                <if test = "mark != null and mark !=''">AND #{mark} > user.id </if>
                ORDER BY user.id DESC
            </if>
            <if test = "orderway != null and orderway =='ASC'">
                <if test = "mark != null and mark !=''">AND user.id > #{mark}</if>
                ORDER BY user.id ASC
            </if>
        </if>
        <if test = "orderby != null and orderby =='amountcpoint'">
            <if test = "orderway != null and orderway =='DESC'">
            </if>
            <if test = "orderway != null and orderway =='ASC'">
                <if test = "mark != null and mark !=''">AND CONCAT(user.amountcpoint, '_', user.id) > #{mark}</if>
                ORDER BY user.amountcpoint ASC
            </if>
        </if>
        LIMIT 0, #{perpage}
    </select>
</mapper>